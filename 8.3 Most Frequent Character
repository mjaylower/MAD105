def main():

    user_string = user_input()
    user_string = user_string.upper()
    user_string = user_string.strip()
    user_string = user_string.replace(' ', '')
    user_string = user_string.replace('.', '')
    user_string = user_string.replace("'", "")
    user_string = user_string.replace(',', '')
    user_string = sorted(user_string)

#    print(user_string)
    popular_character = ''
    popular_character_count = 0

    for ch in user_string:
        current_character_count = 0
        for c in user_string:
            current_character_count += ch == c
        if current_character_count >= popular_character_count:
            if current_character_count == popular_character_count:
                if ch in popular_character:
                    continue
                popular_character = popular_character + ' and ' + ch
            else:
                popular_character = ch
            popular_character_count = current_character_count
    print('The most frequent character(s): ' + popular_character)
    print('The character(s) appeared', popular_character_count, 'times')


def user_input():
    user_input_string = input('Please enter your favorite phrase. ')
    return user_input_string


main()
